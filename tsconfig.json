{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2020",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "dist",
		"baseUrl": ".",
		"lib": ["ES2020"],
		"types": ["node"],
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"pretty": true,
		"noFallthroughCasesInSwitch": true,
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		}
	},
	"include": [
		"src/**/*"
	]
}